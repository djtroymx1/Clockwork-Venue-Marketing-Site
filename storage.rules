
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for brand assets
    match /brand/{allPaths=**} {
      allow read;
      allow write: if false;
    }
    
    // User-specific files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // TODO: Phase 4 - Enforce security rules for exports
    match /exports/{orgId}/{allPaths=**} {
      allow read: if request.auth != null
                  && request.auth.token.orgId == orgId
                  && request.auth.token.role in ['Manager', 'Admin'];
      allow write: if false; // Uploads are server-side only
    }
  }
}
